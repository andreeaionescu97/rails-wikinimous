<div class="navbar">
<h2>Wikinimous</h2>
<h3><%= link_to "Add New Article", articles_new_path, class: "new-article" %></h3>
</div>

<ul>
  <% @articles.each do |article| %>
    <li><%= link_to article.title, article_path(article), class: "title-article" %></li>
    <p><%= article.content %></p>
    <%= link_to "Delete an Article", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "delete-article" %>
  <% end %>
</ul>







